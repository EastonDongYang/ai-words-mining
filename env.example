# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Basic Scraping Configuration
TARGET_URL=https://www.toolify.ai/new
SCRAPING_DELAY=2
ENABLE_MULTI_SITE=true
MAX_TOTAL_ITEMS=500

# Crawl4AI Configuration
USE_CRAWL4AI=true
CRAWL4AI_HEADLESS=true
CRAWL4AI_VERBOSE=false
CRAWL4AI_CACHE_MODE=enabled
CRAWL4AI_MAX_CONCURRENT=5
CRAWL4AI_BROWSER_TYPE=chromium
CRAWL4AI_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
CRAWL4AI_VIEWPORT_WIDTH=1920
CRAWL4AI_VIEWPORT_HEIGHT=1080
CRAWL4AI_WAIT_TIMEOUT=30000
CRAWL4AI_ENABLE_SCREENSHOTS=false
CRAWL4AI_ENABLE_NETWORK_CAPTURE=false

# LLM Extraction Configuration
ENABLE_LLM_EXTRACTION=false
LLM_PROVIDER=openai/gpt-4o-mini
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# Content Filtering Configuration
CONTENT_FILTER_TYPE=pruning
CONTENT_FILTER_THRESHOLD=0.48
CONTENT_FILTER_MIN_WORDS=10
BM25_QUERY=AI tools artificial intelligence machine learning
BM25_THRESHOLD=1.0

# Deep Crawling Configuration
ENABLE_DEEP_CRAWL=false
DEEP_CRAWL_STRATEGY=bfs
DEEP_CRAWL_MAX_DEPTH=3
DEEP_CRAWL_MAX_PAGES=10
DEEP_CRAWL_DELAY=1.0

# Notification Configuration
NOTIFICATION_WEBHOOK_URL=
NOTIFICATION_EMAIL=risunsemi@gmail.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=risunsemi@gmail.com
EMAIL_PASSWORD=your-email-password-here

# System Configuration
MAX_RETRIES=3
BATCH_SIZE=10
DEBUG_MODE=false 